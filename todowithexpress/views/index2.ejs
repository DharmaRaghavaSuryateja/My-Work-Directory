<html>
  <head>
    <title>ToDo App</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <h2>A Simple ToDo List App</h2>

      <form action="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="add new task" />
        <button>Add Task</button>
      </form>

      <h2>Added Task</h2>

      <% for( var i=0; i < task.length; i++){ %>
      <form action="/check/<%=i%>" method="post">
        <input type="checkbox" name="check" onchange="this.form.submit()" />
        <%=task[i].caption %>
      </form>

      <form action="/removetask/<%=i%>" method="post">
        <button type="submit" id="top">Remove</button>
      </form>

      <%}%>

      <h2>Completed task</h2>

      <% for(var i=0; i < complete.length; i++){ %>
      <form action="/def/<%=i%>" method="post">
        <input
          type="checkbox"
          name="chek"
          value="<%= complete[i].caption%>"
          checked
          onchange="this.form.submit()"
        />
        <%= complete[i].caption%>
      </form>
      <form action="/del/<%=i%>" method="post">
        <button type="submit">Remove</button>
      </form>

      <% } %>
    </div>
  </body>
</html>
